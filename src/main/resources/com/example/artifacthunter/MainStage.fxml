<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artifacthunter.MainController">

<VBox alignment="CENTER" fillWidth="false" prefHeight="292.0" prefWidth="307.0" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>



    <Label fx:id="StatusLabel" text="" />
   <GridPane fx:id="playField" alignment="CENTER" gridLinesVisible="true" hgap="2.0" vgap="2.0">
   </GridPane>
    <Button onAction="#onRestartButtonClick" text="Start new game" />
</VBox>
   <VBox>
      <children>
         <Label fx:id="ThreatsLabel" text="Threats: 0" />
         <Label fx:id="DistanceLabel" text="Distance: unknown" />
      </children></VBox>
</HBox>
